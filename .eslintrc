{
  "ecmaFeatures": {
    "modules": true,
    "jsx": true
  },
  "env": {
    "es6": true,
    "node": true
  },
  "rules": {
    "indent": [2, 2],
    "no-mixed-spaces-and-tabs": 2,
    "quotes": [1, "single"],
    "strict": 1,
    "camelcase": 1,

    // disable
    "semi": 0,
    "curly": 0,
    "eol-last": 0,
    "comma-dangle": 0,
    "key-spacing": 0,
    "no-mixed-requires": 0,
    "no-multi-spaces": 0,
    "no-underscore-dangle": 0,
    "no-use-before-define": 0
  }
}